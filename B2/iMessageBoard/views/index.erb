<section id="messages">
<p>
当前共有<%=@hash.size %>条留言
</p>
  <%	i=@under.size-1
	while(i>=0) do
	message = @hash[@under[i]] %>
    <form action="delete" method="post">
    <article class="post">

        <h1><%= message.id %></h1>

				<section class="content">
	        <%= message.message %>
	      </section>

        <div class="date" align="right"><%= message.created_at %> - by <%= message.author %></div>



      <input type="type" value="<%= message.id%>" name="id" style="display:none">
      <div align="right"><input type="submit" value="删除" ></div>
    </article>
    </form>
  <hr>
  <%	i=i-1
	end %>
</section>

